{
  "manifest_version": 3,
  "name": "UPD CRScheduler",
  "version": "1.1",
  "description": "Fetch, generate, and rank CRS schedule combinations",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://rupp-backend-vblj.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "CRScheduler",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
